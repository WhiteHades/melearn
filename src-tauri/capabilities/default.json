{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "melearn permissions for cross-platform file access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "log:default",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$VIDEO/**" },
        { "path": "$AUDIO/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$APPDATA/**" },
        { "path": "$LOCALAPPDATA/**" },
        { "path": "/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$VIDEO/**" },
        { "path": "$DESKTOP/**" },
        { "path": "/**" }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "/**" }
      ]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-watch",
    "fs:allow-write",
    "mpv:default"
  ]
}
